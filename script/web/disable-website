#!/bin/bash

# Kiểm tra quyền root
if [ "$EUID" -ne 0 ]; then
  echo "Error: Vui lòng chạy với quyền root."
  exit 1
fi

# Đọc thông tin đầu vào
DOMAIN=$1
NGINX_CONFIG_AVAILABLE="/etc/nginx/sites-available/$DOMAIN"
NGINX_CONFIG_SYMLINK="/etc/nginx/sites-enabled/$DOMAIN"

if [ -z "$DOMAIN" ]; then
  echo "Error: Sử dụng: ./disable-website.sh <domain>"
  exit 1
fi

# Kiểm tra tệp cấu hình Nginx
if [ ! -f "$NGINX_CONFIG_AVAILABLE" ]; then
  echo "Error: Không tìm thấy tệp cấu hình Nginx cho $DOMAIN tại $NGINX_CONFIG_AVAILABLE."
  exit 1
fi

# Tắt website bằng cách xóa symlink
if [ -L "$NGINX_CONFIG_SYMLINK" ]; then
  echo "Tắt website $DOMAIN..."
  rm -f "$NGINX_CONFIG_SYMLINK"
else
  echo "Website $DOMAIN chưa được bật hoặc không có trong sites-enabled."
fi

# Chèn return 444; ngay dưới dòng server_name
if grep -q "server_name $DOMAIN;" "$NGINX_CONFIG_AVAILABLE"; then
  echo "Chèn return 444; vào cấu hình $NGINX_CONFIG_AVAILABLE..."
  sed -i "/server_name $DOMAIN;/a\    return 444;" "$NGINX_CONFIG_AVAILABLE"
else
  echo "Error: Không tìm thấy dòng server_name $DOMAIN; trong $NGINX_CONFIG_AVAILABLE."
  exit 1
fi

# Tải lại Nginx
echo "Tải lại Nginx..."
if nginx -t; then
  systemctl reload nginx
  echo "Website $DOMAIN đã bị tắt và chặn truy cập!"
else
  echo "Error: Cấu hình Nginx không hợp lệ. Kiểm tra lại tệp cấu hình!"
  exit 1
fi
